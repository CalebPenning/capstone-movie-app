{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "Schema for a new movie instance",
    "description": "Allows us to persist a movie's id and title for quick API calls",
    "examples": [
        {
            "imdbId": "asf300irasdjslx",
            "title": "The Big Dog Says So"
        }
    ],
    "required": [
        "imdbId",
        "title"
    ],
    "properties": {
        "imdbId": {
            "type": "string",
            "title": "imdbID",
            "description": "Unique ID that we can call the API for",
            "examples": [
                "asf300irasdjslx"
            ]
        },
        "title": {
            "type": "string",
            "title": "Movie Title",
            "description": "Title of the movie",
            "examples": [
                "The Big Dog Says So",
                "I Am The Big Dog"
            ]
        }
    },
    "additionalProperties": false
}